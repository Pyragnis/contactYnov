{% extends "base.html.twig" %}
{% block titre %}list de contact
{% endblock %}
{% block body %}
	<div class="container">
		<h1>Liste des Contacts</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Email</th>
					<th>Téléphone</th>
					<th>Commentaire</th>
				</tr>
			</thead>
			<tbody>
				{% for contact in contacts %}
					<tr>
						<td>{{ contact.nom }}</td>
						<td>{{ contact.prenom }}</td>
						<td>{{ contact.email }}</td>
						<td>{{ contact.tel }}</td>
						<td>{{ contact.commentaire }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<!-- Bouton Ajouter Contact -->
		<div class="text-center">
			<a href="{{ path('app_add') }}" class="btn btn-primary">Ajouter Contact</a>
		</div>
	</div>
{% endblock %}
